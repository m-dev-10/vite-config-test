{
	"compilerOptions": {
	  "target":          "esnext",
	  "module":          "esnext",
	  "lib":             ["dom", "esnext"],
	  "jsx":             "react-jsx",
	  "baseUrl":         "src",
	  "paths": {
		 "@/*": ["*"]
	  },
	  "moduleResolution":"node",
	  "strict":          true,
	  "esModuleInterop": true,
	  "skipLibCheck":    true,
	  "forceConsistentCasingInFileNames": true,
	  "types": ["vite/client", "node"]
	},
	"include": [
	  "src",
	  "vite.config.ts"
	],
 }